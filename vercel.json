{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/socket.io/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/api/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/(.*)",
            "dest": "server.js"
        }
    ],
    "env": {
        "NODE_ENV": "production",
        "VAPID_PUBLIC_KEY": "@vapid_public_key",
        "VAPID_PRIVATE_KEY": "@vapid_private_key"
    },
    "functions": {
        "server.js": {
            "memory": 1024,
            "maxDuration": 10
        }
    }
} 